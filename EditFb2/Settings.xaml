<Window x:Class="EditFb2.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EditFb2"
        mc:Ignorable="d"
        Title="Settings" Height="300" Width="300">
    <StackPanel>
        <Label Content="Директория библиотеки:"/>
        <DockPanel LastChildFill="True">
            <Button DockPanel.Dock="Right" Width="{Binding ElementName=PathDirectoryTb, Path=ActualHeight}" Margin="5,0"/>
            <TextBox x:Name="PathDirectoryTb" Text="D:/Книги" HorizontalAlignment="Stretch" Margin="5,0,0,0"/>
        </DockPanel>
    </StackPanel>
</Window>
