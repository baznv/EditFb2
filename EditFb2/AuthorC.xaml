<UserControl x:Class="Fb2Editing.AuthorC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fb2Editing"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition />
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Image Width="80" Height="80" Grid.Column="0" Margin="10"/>
        <StackPanel Grid.Column="1">
            <Label x:Name="NameLb" Content="Name" Width="Auto" Height="Auto" FontSize="24"/>
            <Label x:Name="FileNameLb" Content="FileName"/>
            <WrapPanel x:Name="AuthorWp" >
                <Label x:Name="AuthorLb" Content="Author, author"/>
            </WrapPanel>
            <WrapPanel x:Name="GenresWp" >
                <Label x:Name="GenresLb" Content="Genres, Genres"/>
            </WrapPanel>
        </StackPanel>
        <Label x:Name="MoreL" Grid.Column="2" Content="More" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <StackPanel x:Name="MoreSp">
            
        </StackPanel>
    </Grid>
</UserControl>
